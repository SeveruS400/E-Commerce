@model IEnumerable<Entities.Models.Products>

<div class="text-center">
    <div class="display-6">Products</div>

    <div class="d-flex justify-content-end my-3">
        <a class="btn btn-outline-success" asp-action="Create">
            <i class="fa-solid fa-plus"></i>
            Create</a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Image</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <th>@product.Id</th>
                    <th>
                        <img class="border border-light rounded" src="@product.ImageUrl" alt="@product?.ProductName" width="50"/>
                    </th>
                    <th>@product.ProductName</th>
                    <th>@product.Price</th>
                    <th>                    
                        <div class="btn-group">
                            <a class="btn btn-warning" asp-action="Update" asp-route-id="@product.Id">
                                <i class="fa-solid fa-pen-to-square"></i>
                                Edit
                            </a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@product.Id">
                                <i class="fa-solid fa-trash"></i>
                                Delete
                            </a>
                        </div>

                    </th>
                </tr>
            }
        </tbody>
    </table>

</div>