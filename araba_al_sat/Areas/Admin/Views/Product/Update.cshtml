@model ProductDtoForUpdate

<div class="text-center">
    <div class="display-6">Update</div>
</div>
<form method="post" asp-action="Update" enctype="multipart/form-data">
    <div class="text-danger" asp-validation-summary="All"></div>
    <input type="hidden" asp-for="Id"/>

    <div class="form-group my-3">
        <label asp-for="CategoryId">Category</label>
        <select class="form-control" asp-for="CategoryId">
            @foreach (Categories category in ViewBag.Category)
            {
                <option value="@category.Id">@category.CategoryName</option>
            }
        </select>
    </div>

    <div class="form-group my-3">
        <label asp-for="ProductName">Product Name</label>
        <input asp-for="ProductName" class="form-control" />
    </div>
    <div class="form-group my-3">
        <label asp-for="Summary">Summary</label>
        <input asp-for="Summary" class="form-control" />
    </div>
    <div class="form-group my-3">
        <label asp-for="Price">Price</label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="form-group my-3">
        <img class="rounded shadow" width="150" src="@Model.ImageUrl" />
    </div>
    <div class="form-group my-3">
        <label asp-for="ImageUrl">Image</label>
        <input type="file" name="file" class="form-control" />
    </div>
    <div class="form-group my-3">
        <button class="btn btn-primary" type="submit">Save</button>
    </div>
</form>