@page "/cart"
@model CartModel

<h1>Cart</h1>

Cart (@Model.Cart.Lines.Count())

<div>
    <div class="text-center display-6">
        Cart
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Subtotal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var line in Model.Cart?.Lines ?? Enumerable.Empty<CartLine>())
            {
                <tr>
                    <td>@line.Products.ProductName</td>
                    <td>@line.Quantity</td>
                    <td>@line.Products.Price.ToString("c")</td>
                    <td>@((line.Products.Price*line.Quantity).ToString("c2"))</td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>
</div>