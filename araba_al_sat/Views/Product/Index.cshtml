@model IEnumerable<Products>

<div class="row">
    <div class="col-md-9">
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-4 mb-4">
                    <!-- Her ürün kartını 4 sütun genişliğinde yapıyoruz (12/3=4) -->
                    @await Html.PartialAsync("_ProductCard", product)
                </div>
            }
        </div>
    </div>
</div>
