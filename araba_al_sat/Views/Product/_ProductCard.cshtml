@model Products

<div class="col-sm-12" col-md-4 my-2>
    <div class="card" style="width: 18rem;">
        <img src="@Model?.ImageUrl" class="card-img-top"/>
        <div class="card-body">
            <h5 class="card-title">@Model.ProductName</h5>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>

            <div class="btn btn-group">
                <form id="@Model.Id" asp-page="/cart" method="post">
                    <input type="hidden" asp-for="Id"/>
                    <input type="hidden" name="returnUrl" value="/Product/Get/@Model.Id" />
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="fa-solid fa-cart-shopping"></i>
                    </button></form>
                <a asp-action="Get" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="fa-solid fa-arrow-right"></i>
                </a>
                <a href="#" class="btn btn-primary">Details</a>
            </div>
        </div>
    </div>
</div>
